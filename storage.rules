rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Yetkilendirilmiş kullanıcılar için izinler
    match /profile_images/{userId}/{imageId=**} {
      // Kullanıcılar kendi profil fotoğraflarını okuyabilir, yazabilir ve silebilir
      allow read;
      allow write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Test ve diğer dosyalar için izinler
    match /test_files/{fileId} {
      allow read, write: if request.auth != null;
    }
    
    // Diğer tüm dosyalar için erişimi kısıtla
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
